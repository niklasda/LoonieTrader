<Window x:Class="LoonieTrader.App.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding Source={StaticResource Locator}, Path=About}"
        Title="About"
        WindowStartupLocation="CenterOwner"
        Height="300"
        Width="300">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="20"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Margin="5" Text="{Binding AboutText, Mode=OneWay}" VerticalAlignment="Top" />
                <Image Source="/LoonieTrader.App;component/Images/AppBitmap.bmp" Stretch="None"/>
            </Grid>
    </Grid>
</Window>
