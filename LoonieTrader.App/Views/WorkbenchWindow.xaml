<Window x:Class="LoonieTrader.App.Views.WorkbenchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        DataContext="{Binding Source={StaticResource Locator}, Path=Workbench}"
        Title="Indicator Workbench"
        ResizeMode="CanResizeWithGrip"
        Height="500"
        Width="600" Icon="/LoonieTrader.App;component/Images/AppBitmap.bmp">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="30"></ColumnDefinition>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="60"></RowDefinition>
                        <RowDefinition Height="60"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Information about price, time, depth, periods (time frames) and stuff" TextWrapping="Wrap"></TextBlock>
                    <TextBlock Grid.Row="1" Text="Select instrument to show" TextWrapping="Wrap"></TextBlock>
                    <TextBlock Grid.Row="2" Text="Optionally require specific time frame" TextWrapping="Wrap"></TextBlock>

                </Grid>


                <syncfusion:SfDataGrid  Grid.Column="2"
                        ShowRowHeader="True" AutoGenerateColumns="True" AllowSelectionOnPointerPressed="True" ColumnSizer="Auto"
                        ItemsSource="{Binding SampleData}" Margin="0" >

                </syncfusion:SfDataGrid>


            </Grid>

                <TextBox Grid.Row="1"  Text="f(x) = ((x-1)+(x)+(x+1))/3"></TextBox>
            <GridSplitter Grid.Row="2"  Height="5" ResizeDirection="Rows" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ></GridSplitter>


            <syncfusion:SfChart Grid.Row="3" x:Name="MainChart" Header="Indicator for EUR/USD"
                                        BorderBrush="Gainsboro" BorderThickness="1" >
                <syncfusion:CandleSeries ListenPropertyChange="True" Label="EURUSD" ItemsSource="{Binding SampleData}"
                                                 XBindingPath="Date"   High="High" Open="Open" Close="Close" Low="Low" >
                </syncfusion:CandleSeries>
            </syncfusion:SfChart>
        </Grid>
    </Grid>
</Window>







