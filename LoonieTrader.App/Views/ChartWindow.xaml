<Window x:Class="LoonieTrader.App.Views.ChartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        DataContext="{Binding Source={StaticResource Locator}, Path=Chart}"
        Title="Chart"
        Height="419"
        Width="473" Icon="/LoonieTrader.App;component/Images/AppBitmap.bmp">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <syncfusion:SfChart Grid.Row="1" x:Name="MainChart" Header="EUR/USD" BorderBrush="Gainsboro" BorderThickness="1" >

            <syncfusion:SfChart.PrimaryAxis>
                <syncfusion:CategoryAxis Header="Time"/>
            </syncfusion:SfChart.PrimaryAxis>

            <syncfusion:SfChart.SecondaryAxis>
                <syncfusion:NumericalAxis StartRangeFromZero="False" Header="Price" />
            </syncfusion:SfChart.SecondaryAxis>

            <syncfusion:CandleSeries Label="EURUSD" ItemsSource="{Binding GraphData}" XBindingPath="Date"   High="High" Open="Open" Close="Close" Low="Low" />
        </syncfusion:SfChart>
    </Grid>
</Window>















