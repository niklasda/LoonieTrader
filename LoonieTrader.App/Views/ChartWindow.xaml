<Window x:Class="LoonieTrader.App.Views.ChartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        DataContext="{Binding Source={StaticResource Locator}, Path=Chart}"
        Title="Chart"
        ResizeMode="CanResizeWithGrip"
        Height="419"
        Width="473" Icon="/LoonieTrader.App;component/Images/AppBitmap.bmp">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <wpf:CartesianChart Grid.Row="1" Series="{Binding SeriesCollection}" BorderThickness="1" BorderBrush="Gainsboro">
            <wpf:CartesianChart.AxisX>
                <wpf:Axis Labels="{Binding Labels}"/>
            </wpf:CartesianChart.AxisX>
            <wpf:CartesianChart.AxisY>
                <wpf:Axis Labels="{Binding Labels}"/>
            </wpf:CartesianChart.AxisY>
        </wpf:CartesianChart>
        
    </Grid>
</Window>















