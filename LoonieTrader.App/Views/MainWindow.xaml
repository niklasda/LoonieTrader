<fluent:RibbonWindow x:Class="LoonieTrader.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:parts="clr-namespace:LoonieTrader.App.Views.Parts"
        xmlns:fluent="clr-namespace:Fluent;assembly=Fluent"
        DataContext="{Binding Source={StaticResource Locator}, Path=Main}"
        Title="{Binding WindowTitle}"
        ResizeMode="CanResizeWithGrip"
        Height="700" MinHeight="600"
        Width="1280" MinWidth="960"
        Icon="/LoonieTrader.App;component/Images/AppBitmap.bmp" Closing="Window_Closing">
    <Window.InputBindings>
        <!--<KeyBinding Key="O" Modifiers="Control" Command="{Binding ComplexOrderCommand}"/>
        <KeyBinding Key="I" Modifiers="Control" Command="{Binding WorkbenchCommand}"/>
        <KeyBinding Key="H" Modifiers="Control" Command="{Binding NewChartCommand}"/>
        <KeyBinding Key="D2" Modifiers="Control" Command="{Binding AccountInformationCommand}"/>
        <KeyBinding Key="D3" Modifiers="Control" Command="{Binding TransactionHistoryCommand}"/>
        <KeyBinding Key="D4" Modifiers="Control" Command="{Binding OpenOrdersCommand}"/>
        <KeyBinding Key="D5" Modifiers="Control" Command="{Binding OpenPositionsCommand}"/>
        <KeyBinding Key="F1" Modifiers="Control" Command="{Binding AboutCommand}"/>-->
    </Window.InputBindings>
    <DockPanel LastChildFill="True">
        <fluent:Ribbon DockPanel.Dock="Top" CanQuickAccessLocationChanging="False">
            <!--Backstage-->

            <fluent:Ribbon.ToolBarItems>
                <fluent:Button Size="Small" Icon="/Images/Help_32x.png" Command="{Binding AboutCommand}">

                </fluent:Button>
            </fluent:Ribbon.ToolBarItems>

            <!--Quick Access Toolbar Items-->
            <fluent:Ribbon.QuickAccessItems >
                <!--Use Content or Target Property to set QAT item-->
                <fluent:QuickAccessMenuItem IsChecked="true" Target="{Binding Source={x:Reference OrderButton}}" />
                <fluent:QuickAccessMenuItem IsChecked="true" Target="{Binding Source={x:Reference ChartButton}}" />
                <!--You Can Just Bind with Any Control
                <fluent:QuickAccessMenuItem Target="{Binding ElementName=OpenOrderWindow}"/>-->
            </fluent:Ribbon.QuickAccessItems>

            <!--Tabs-->

            <fluent:RibbonTabItem Header="Trading"  fluent:KeyTip.Keys="T">

                <fluent:RibbonGroupBox Header="Window">
                    <fluent:Button Header="Order" x:Name="OrderButton" fluent:KeyTip.Keys="R" Icon="\Images\IFrame_5767.png"  LargeIcon="\Images\IFrame_5767.png" Command="{Binding ComplexOrderCommand}" />
                    <fluent:Button Header="Chart" x:Name="ChartButton" fluent:KeyTip.Keys="H" Icon="\Images\StockChart_16x.png" LargeIcon="\Images\StockChart_16x.png" Command="{Binding NewChartCommand}" />
                    <fluent:Button Header="Instrument Picker"          fluent:KeyTip.Keys="I" Icon="\Images\MoneyEditor_16x.png" LargeIcon="\Images\MoneyEditor_16x.png" Command="{Binding InstrumentsCommand}" />
                    <fluent:Button Header="Blotter"                    fluent:KeyTip.Keys="B" Icon="\Images\4Rows_16x.png" LargeIcon="\Images\4Rows_16x.png" Command="{Binding BlotterCommand}" />
                    <fluent:Button Header="Workbench"                  fluent:KeyTip.Keys="W" Icon="\Images\tools_40x.png" LargeIcon="\Images\tools_40x.png" Command="{Binding WorkbenchCommand}" />
                    <fluent:Button Header="ML"                         fluent:KeyTip.Keys="M" Icon="\Images\Learn.png" LargeIcon="\Images\Learn.png" Command="{Binding MachineLearningCommand}" />
                </fluent:RibbonGroupBox>
                <fluent:RibbonGroupBox Header="Views">
                    <fluent:Button Header="Account Details"      fluent:KeyTip.Keys="A" Icon="\Images\Account_32x.png" LargeIcon="\Images\Account_32x.png" Command="{Binding AccountInformationCommand}" />
                    <fluent:Button Header="Transaction History"  fluent:KeyTip.Keys="H" Icon="\Images\Datalist_32x.png" LargeIcon="\Images\Datalist_32x.png" Command="{Binding TransactionHistoryCommand}" />
                    <fluent:Button Header="Open Orders"          fluent:KeyTip.Keys="E" Icon="\Images\CheckboxList_16x.png" LargeIcon="\Images\CheckboxList_16x.png" Command="{Binding OpenOrdersCommand}" />
                    <fluent:Button Header="Open Positions"       fluent:KeyTip.Keys="P" Icon="\Images\Checklist_16x.png" LargeIcon="\Images\Checklist_16x.png" Command="{Binding OpenPositionsCommand}" />
                </fluent:RibbonGroupBox>
            </fluent:RibbonTabItem>

            <fluent:RibbonTabItem Header="Other"  fluent:KeyTip.Keys="O">
                <fluent:RibbonGroupBox Header="File">
                    <fluent:Button Header="Settings"      fluent:KeyTip.Keys="S" Icon="\Images\Settings_32x.png" LargeIcon="\Images\Settings_32x.png" Command="{Binding SettingsCommand}" />
                    <fluent:Button Header="Log Out"       fluent:KeyTip.Keys="U" Icon="\Images\Exit_16x.png"  LargeIcon="\Images\Exit_16x.png" Command="{Binding LogOutCommand}" />
                </fluent:RibbonGroupBox>
                <fluent:RibbonGroupBox Header="Diagnostice">
                    <fluent:Button Header="Logs"            fluent:KeyTip.Keys="L" Icon="\Images\dialog_32xLG.png" LargeIcon="\Images\dialog_32xLG.png" Command="{Binding LogCommand}" />
                    <fluent:Button Header="Service Status"  fluent:KeyTip.Keys="V" Icon="\Images\StatusWarning_grey_32xLG.png" LargeIcon="\Images\StatusWarning_grey_32xLG.png" Command="{Binding ServiceStatusCommand}" />
                </fluent:RibbonGroupBox>
                <fluent:RibbonGroupBox Header="Help">

                    <fluent:SplitButton Header="Web Links" LargeIcon="\Images\add_hyperlink_40x.png"  >
                        <fluent:MenuItem Header="Local Settings Folder" Command="{Binding GotoLocalSettingsFolderCommand}" />
                        <fluent:MenuItem Header="GitHub Project Page" Command="{Binding GotoProjectPageCommand}" />
                        <fluent:GroupSeparatorMenuItem  />
                        <fluent:MenuItem Header="Oanda" Command="{Binding GotoOandaCommand}" />
                        <fluent:MenuItem Header="Oanda API" Command="{Binding GotoOandaApiCommand}" />
                        <fluent:MenuItem Header="Oanda Dev Forum" Command="{Binding GotoOandaDevCommand}" />
                        <fluent:MenuItem Header="Market Pulse" Command="{Binding GotoMarketPulseCommand}" />
                        <fluent:MenuItem Header="Market Pulse Calendar" Command="{Binding GotoMarketPulseCalendarCommand}" />
                        <fluent:MenuItem Header="Financial News" Command="{Binding GotoNewsCommand}" />
                        <fluent:MenuItem Header="Google Finance" Command="{Binding GotoGoogleFinanceCommand}" />
                        <fluent:MenuItem Header="Yahoo Finance" Command="{Binding GotoYahooFinanceCommand}" />
                    </fluent:SplitButton>


                    <fluent:Button Header="About" fluent:KeyTip.Keys="A" Icon="\Images\Help_32x.png" LargeIcon="\Images\Help_32x.png" Command="{Binding AboutCommand}" />
                </fluent:RibbonGroupBox>
            </fluent:RibbonTabItem>

        </fluent:Ribbon>
       <!-- <Menu DockPanel.Dock="Top" Padding="3">
            <MenuItem Header="_File" >
