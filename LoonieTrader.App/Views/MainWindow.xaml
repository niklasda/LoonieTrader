<Window x:Class="LoonieTrader.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Syncfusion="http://schemas.syncfusion.com/wpf"
        DataContext="{Binding Source={StaticResource Locator}, Path=Main}"
        Title="LoonieTrader"
        ResizeMode="CanResizeWithGrip"
        Height="700"
        Width="900"
        Icon="/LoonieTrader.App;component/Images/AppBitmap.bmp">
    <Window.InputBindings>
        <KeyBinding Key="T" Modifiers="Control" Command="{Binding TradeTicketCommand}"/>
    </Window.InputBindings>
    <DockPanel LastChildFill="True">
        <Syncfusion:MenuAdv DockPanel.Dock="Top">
            <Syncfusion:MenuItemAdv Header="_File" >
                <Syncfusion:MenuItemAdv Header="_Settings" ></Syncfusion:MenuItemAdv>
                <Syncfusion:MenuItemSeparator />
                <Syncfusion:MenuItemAdv Header="E_xit" InputGestureText="Alt+F4"  />
            </Syncfusion:MenuItemAdv>
            <Syncfusion:MenuItemAdv Header="_Edit" >
                <Syncfusion:MenuItemAdv Command="ApplicationCommands.Paste"  />
            </Syncfusion:MenuItemAdv>
            <Syncfusion:MenuItemAdv Header="_View" >
                <Syncfusion:MenuItemAdv Header="Open Positions" />
                <Syncfusion:MenuItemAdv Header="Open Orders" />
                <Syncfusion:MenuItemSeparator />
                <Syncfusion:MenuItemAdv Header="Chart"  />
                <Syncfusion:MenuItemSeparator />
                <Syncfusion:MenuItemAdv Header="Trade Ticket" Command="{Binding TradeTicketCommand}" InputGestureText="Ctrl+T" />
                <Syncfusion:MenuItemAdv Header="Order Ticket" />
            </Syncfusion:MenuItemAdv>
            <Syncfusion:MenuItemAdv Header="_Window" />
            <Syncfusion:MenuItemAdv Header="_Help" >
                <Syncfusion:MenuItemAdv Header="_About" Command="{Binding AboutCommand}" ></Syncfusion:MenuItemAdv>
            </Syncfusion:MenuItemAdv>
        </Syncfusion:MenuAdv>
        <StatusBar Height="30"  DockPanel.Dock="Bottom">
            <MenuItem Header="yy">
                <Button/>
                <Button/>
            </MenuItem>
            <Button Content="hi"/>
        </StatusBar>

        <Grid   >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Syncfusion:SfDataGrid  Grid.Row="0" AllowDraggingColumns="True"
                               ShowRowHeader="True"
                               AutoGenerateColumns="True"
                               AllowSelectionOnPointerPressed="True"
                               ColumnSizer="Auto"
                                    ItemsSource="{Binding InstrumentList}" SelectedItem="{Binding SelectedItem}" />
            </Grid>
            <GridSplitter Grid.Column="1" Width="7" ResizeDirection="Columns" HorizontalAlignment="Stretch" ></GridSplitter>


            <Grid  Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="180"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Syncfusion:TabControlExt Grid.Row="0" FlowDirection="RightToLeft" AllowDragDrop="False" CloseButtonType="Hide" EnableLabelEdit="False" ShowTabListContextMenu="False" ShowTabItemContextMenu="False" >
                    <Syncfusion:TabItemExt Header="Open Positions" FlowDirection="LeftToRight">
                        <Syncfusion:SfDataGrid AutoGenerateColumns="True" ItemsSource="{Binding AllPositions}"  FlowDirection="LeftToRight" />
                    </Syncfusion:TabItemExt>
                    <Syncfusion:TabItemExt Header="Open Orders" FlowDirection="LeftToRight">
                        <Syncfusion:SfDataGrid AutoGenerateColumns="True" ItemsSource="{Binding AllOrders}"  FlowDirection="LeftToRight" />
                    </Syncfusion:TabItemExt>
                    <Syncfusion:TabItemExt Header="Transaction History" FlowDirection="LeftToRight">
                        <Syncfusion:SfDataGrid AutoGenerateColumns="True" ItemsSource="{Binding AllTransactions}"  FlowDirection="LeftToRight" />

                    </Syncfusion:TabItemExt>
                    <Syncfusion:TabItemExt Header="Account Information" FlowDirection="LeftToRight">
                        <Syncfusion:PropertyGrid SelectedObject="{Binding AccountSummary}"  FlowDirection="LeftToRight"/>
                    </Syncfusion:TabItemExt>
                </Syncfusion:TabControlExt>
                <GridSplitter Grid.Row="1"  Height="5" ResizeDirection="Rows" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ></GridSplitter>
                <Grid Grid.Row="2" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel><Syncfusion:ComboBoxAdv ItemsSource="{Binding AvailableIndicators}" AllowMultiSelect="True" DefaultText="Selectilate..."/></StackPanel>
                    <Syncfusion:SfChart Grid.Row="1"  Header="EUR/USD"  >
                        <Syncfusion:SfChart.TechnicalIndicators>
                            <Syncfusion:SimpleAverageIndicator/>
                        </Syncfusion:SfChart.TechnicalIndicators>

                        <Syncfusion:SfChart.PrimaryAxis>
                            <Syncfusion:CategoryAxis Header="Time"/>
                        </Syncfusion:SfChart.PrimaryAxis>

                        <Syncfusion:SfChart.SecondaryAxis>
                            <Syncfusion:NumericalAxis StartRangeFromZero="False" Header="Price" />
                        </Syncfusion:SfChart.SecondaryAxis>

                        <Syncfusion:CandleSeries   Label="EURUSD" ItemsSource="{Binding GraphData}" XBindingPath="Date"  High="High" Open="Open" Close="Close" Low="Low"  />
                    </Syncfusion:SfChart>
                </Grid>
            </Grid>
        </Grid>



    </DockPanel>
</Window>







