<Window xmlns:syncfusion="http://schemas.syncfusion.com/wpf"  x:Class="LoonieTrader.App.Views.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding Source={StaticResource Locator}, Path=Log}"
        Title="Log"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Height="400"
        Width="600" Icon="/LoonieTrader.App;component/Images/AppBitmap.bmp">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="32"></RowDefinition>
            </Grid.RowDefinitions>
            <syncfusion:SfTextBoxExt Grid.Row="0" TextWrapping="Wrap" Margin="5" Text="{Binding LogText, Mode=OneWay}" />
            <syncfusion:SfTextBoxExt Grid.Row="1" TextWrapping="Wrap" Margin="5" Text="{Binding LogFileInfo, Mode=OneWay}" />
            </Grid>
    </Grid>
</Window>
